<% content_for :head do %>
<% @articles.each do |article| %>
  <meta property="og:url" content="<%= "http://www.fearthewave.com" + article.slug %>" /> 
  <meta property="og:type"   content="article" /> 
  <meta property="og:title"  content="<%= article.title %>" /> 
  <meta property="og:description"  content="<%= article.sub_title %>" /> 
  <meta property="og:image"  content="https://pbs.twimg.com/media/DHxItWQUMAA1OF0.jpg" /> 
<% end %>
<% end %>

<div class="container">


<% @articles.each do |article| %>

  <div class="article_header">
   <p><%= article.published_at.strftime("%^B %d, %Y") %></p>
    <h1><%= article.title %></h1>
    <h2><%= article.sub_title %></h2>
    <div id="author">
    <p>By JP Gooderham</p>
    </div>
   </div>
 <div class="article_content">    
        <p><%= markdown article.content %></p>
   </div>
      <% end %>
</div>


